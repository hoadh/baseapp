extends layout

block content
  h1=title
  p Please input
  form(action='/register',method='post')
    p Username
    input(type="text",name="name")
    br
    p Email
    input(type="text",name="email")
    br
    p Password
    input(type="password",name="password")
    br
    p Password Again
    input(type="password",name="passwordagain")
    br
    input(type='submit',value='Sign Up')